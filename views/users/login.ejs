<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
  <title>Sneaker Spot | Iniciar sesión</title>
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="css/style-login.css">
</head>

<body>
  <%- include('../partials/header.ejs') %>
  <main>
    <section>
      <form action="/login" method="POST">
        <p>Iniciar sesión</p>
        <div class="flex-form">
          <input type="text" name="emailOrUsername" id="emailOrUsername" placeholder="Email o nombre de usuario">
          <div id="error-username" class="require"></div>
        </div>
          <input type="password" name="password" id="password" placeholder="Contraseña">
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
          <div class="error-messages">
            <ul>
              <% errors.forEach((error, index) => { %>
                <li id="error-message-<%= index + 1 %>" class="error-message">
                  <%= error.msg %>
                </li>
              <% }); %>
            </ul>
            <span onclick="closeAllErrorMessages()" class="close-button"><i class="fa-solid fa-xmark"></i></span>
          </div>
        <% } %>

        <button type="submit" id="submitBtn">Ingresar</button>
      </form>
      <p>¿No tienes cuenta? <a href="/register" class="register">Crea una</a></p>
    </section>
  </main>
  <%- include('../partials/footer.ejs') %>
  <script>
    // Función para cerrar todos los mensajes de error
    function closeAllErrorMessages() {
      var errorMessages = document.querySelector('.error-messages');
      errorMessages.style.display = 'none';
    }

    document.addEventListener('DOMContentLoaded', function () {
      var submitBtn = document.getElementById('submitBtn');
      var inputEmailOrUsername = document.getElementById('emailOrUsername');
      var inputPassword = document.getElementById('password');

      var errorUsername = document.getElementById('error-username');
      var errorPassword = document.getElementById('error-password');

      submitBtn.addEventListener('click', function (evento) {
        // Validación para el campo de email o nombre de usuario
        if (!inputEmailOrUsername.value) {
          errorUsername.innerHTML = '<i class="fa-solid fa-xmark"></i>';
          errorUsername.style.backgroundColor = '#ff3654';
          evento.preventDefault();
        } else {
          errorUsername.innerHTML = '<i class="fa-solid fa-check"></i>';
          errorUsername.style.backgroundColor = '#3ec898';
        }
      });
    });
  </script>
</body>

</html>
